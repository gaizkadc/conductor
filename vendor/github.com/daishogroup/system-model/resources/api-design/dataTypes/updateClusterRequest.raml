#%RAML 1.0 DataType

displayName: UpdateClusterRequest
description: |
Request to update an existing cluster.
type: object
properties:
  name: string
  description: string
  type:
    enum: [cloud, edge, gateway]
  location: string
  canRemove: boolean
  email: string
  status:
    type:
      enum: [INIT,BOOTSTRAPPING,BOOTSTRAPPED,DEPLOYING,DEPLOYED,DELETED]
  drain: boolean
  cordon: boolean
example:
  name: AWS
  description: Company cloud on Amazon
  type: cloud
  location: California, USA
  canRemove: false
  email: admin@admins.com
  status: INIT
  drain: false
  cordon: false
