#%RAML 1.0 DataType

displayName: ApplicationInstance
description: |
An application descriptor contains the information required to deploy and application.
type: object
properties:
  networkId: string
  deployedId: string
  appDescriptorId: string
  clusterId: string
  name: string
  description: string
  label: string
  arguments: string
  status:
    type:
      enum: [init, ok, error]
  persistentSize: string
  storageType:
    type:
      enum: [default, persistent, networkPersistent]
  port: integer
  clusterAddress: string
example:
  networkId: 123c7efc-caa1-412e-8061-66fd5abeb989
  deployedId: app00001-00001
  appDescriptorId: app00001
  clusterId: c0001
  name: Example Application
  description: Basic application deployment
  label: cloud
  arguments: --port=1234
  status: init
  persistentSize: 1gb
  storageType: default
  port: 3030
  clusterAddress: 10.0.0.1
