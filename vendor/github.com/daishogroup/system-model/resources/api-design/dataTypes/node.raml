#%RAML 1.0 DataType

displayName: Node
description: A node represents a Kubernetes node. Nodes compose a cluster, and each node has the information to connect to the physical element.
type: object
properties:
  networkId:
    type: string
    description: Id for the network this node belongs to
    example: 2312fc-caa1-412e-8061-66fd5abeb989
    required: true
  clusterId:
      type: string
      description: Id for the cluster this node belongs to
      example: 2312fc-caa1-412e-8061-66fd5abeb989
      required: true
  id:
    type: string
    description: Internal identifier for the node. Autogenerated.
    example: 427c7efc-caa1-412e-8061-66fd5abeb989
    required: true
  name:
    type: string
    description: The name of the node. Provided by the user.
    example: node-us
    required: true
  description:
    type: string
    description: The description of the node. Provided by the user.
    example: This node is the us.
    required: false
  publicIP:
    type: string
    description: External IP of the node.
    example: 9.10.1.2
    required: true
  privateIP:
    type: string
    description: Internal IP of the node.
    example: 192.168.0.100
    required: true
  installed:
    type: boolean
    description: A flag to indicate if the current node is deployed Daisho platform.
    example: true
    required: true
  username:
    type: string
    description: The username used to connect through SSH.
    example: ubuntu
    required: true
  password:
    type: string
    description: The password used to connect through SSH.
    example: pass
    required: false
  sshKey:
    type: string
    description: The ssh key used to connect through SSH.
    example: LONG_SSH_KEY
    required: false
  status:
    type:
      enum: [NODEINIT, NODEBOOTSTRAPPING, NODEBOOTSTRAPPED, NODEDEPLOYING, JOINED, DELETED]
    description: The status of the node matching the NOCMGR statuses.
    example: NODEINIT
    required: true
example:
  networkId: 123c7efc-caa1-412e-8061-66fd5abeb989
  clusterId: aabc7efc-caa1-412e-8061-66fd5abeb989
  id: 427c7efc-caa1-412e-8061-66fd5abeb989
  name: node-us
  description: This node is the us.
  publicIP: 9.10.1.2
  privateIP: 192.168.0.100
  installed: true
  username: ubuntu
  password: pass
  status: NODEINIT
